<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />

    <application
        android:name=".ChimpApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/Theme.Chimp"
        tools:targetApi="31">
        <activity android:name=".ui.screens.credentials.CredentialsActivity"
            android:exported="false"
            android:screenOrientation="fullSensor"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.Chimp"
            tools:ignore="DiscouragedApi">
        </activity>
        <activity
            android:name=".ui.screens.about.AboutActivity"
            android:exported="false"
            android:screenOrientation="fullSensor"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.Chimp"
            tools:ignore="DiscouragedApi">
        </activity>
        <activity
            android:name=".ui.screens.home.ChannelsActivity"
            android:exported="true"
            android:screenOrientation="fullSensor"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.Chimp"
            tools:ignore="DiscouragedApi">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.screens.channel.channelMembers.ChannelMembersActivity"
            android:exported="false"
            android:screenOrientation="fullSensor"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.Chimp"
            tools:ignore="DiscouragedApi">
        </activity>
        <activity android:name=".ui.screens.channel.channelInvitations.ChannelInvitationsActivity"
            android:exported="false"
            android:screenOrientation="fullSensor"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.Chimp"
            tools:ignore="DiscouragedApi">
        </activity>
        <activity android:name=".ui.screens.channel.editChannel.EditChannelActivity"
            android:exported="false"
            android:screenOrientation="fullSensor"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.Chimp"
            tools:ignore="DiscouragedApi">
        </activity>
        <activity android:name=".ui.screens.search.ChannelSearchActivity"
            android:exported="false"
            android:screenOrientation="fullSensor"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.Chimp"
            tools:ignore="DiscouragedApi">
        </activity>
        <activity
            android:name=".ui.screens.invitations.InvitationsActivity"
            android:exported="false"
            android:screenOrientation="fullSensor"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.Chimp"
            tools:ignore="DiscouragedApi">
        </activity>
        <activity
            android:name=".ui.screens.home.inviteUser.InviteUserActivity"
            android:exported="false"
            android:screenOrientation="fullSensor"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.Chimp"
            tools:ignore="DiscouragedApi">
        </activity>
        <activity android:name=".ui.screens.home.createChannel.CreateChannelActivity"
            android:exported="false"
            android:screenOrientation="fullSensor"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.Chimp"
            tools:ignore="DiscouragedApi">
        </activity>
        <service
            android:name=".infrastructure.SSEService"
            android:exported="false"
            android:foregroundServiceType="dataSync"
            android:permission="android.permission.BIND_JOB_SERVICE"
        />
    </application>

</manifest>